{
  "compilerOptions": {
    // File structure
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "module": "nodenext",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "nodenext",
    "types": ["node"],

    // Output control
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type checks
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // JS/TS handling
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // Module behavior
    "verbatimModuleSyntax": true,
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
